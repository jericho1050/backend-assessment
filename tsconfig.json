{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": ".",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    // "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmit": true,
    "paths": {
      "@/*": ["src/*"]
    }
  }
}